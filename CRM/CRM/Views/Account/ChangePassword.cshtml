<body id="login">

    @*<header id="header">
            <!--<span id="logo"></span>-->

            <div id="logo-group">
                <span id="logo"> <img src="~/img/logo.png" alt="SmartAdmin"> </span>

                <!-- END AJAX-DROPDOWN -->
            </div>

            <span id="extr-page-header-space"> <span class="hidden-mobile hiddex-xs">Already registered?</span> <a href="@Url.Action("Login", "account")" class="btn btn-danger">Sign In</a> </span>

        </header>*@

    <div id="main" role="main">

        <!-- MAIN CONTENT -->
        <div id="content" class="container">

            <div class="row">

                <div class="col-lg-offset-2 col-lg-10 col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="well no-padding">






                        <form action="@Url.Action("ChangePassword", "account")" method="Post" id="smart-form-register" class="smart-form client-form">
                            @Html.AntiForgeryToken()
                            <header>
                                Change Password
                                @{
                                    if (TempData["success"] != null)
                                    {
                                        <div style="color: #2fe42f;font-size: 12px;margin-top: 15px;">
                                            @Html.Encode(TempData["success"])
                                        </div>

                                    }
                                }
                            </header>
                            <input type="hidden" value="@ViewBag.UserID" name="UserID" />
                            <div class="">
                                @Html.ValidationSummary(true, "", new { @class = "text-danager alert", Style = "color:red;" })
                            </div>
                            <fieldset>

                                <section class="col-lg-12">
                                    <div class="col-lg-2">Old Password</div>
                                    <div class="col-lg-9">
                                        <label class="input">
                                            <i class="icon-append fa fa-lock"></i>
                                            <input type="password" id="OldPassword" value="" required name="OldPassword" placeholder="Old Password" />
                                            <b class="tooltip tooltip-bottom-right">Old Password</b>
                                            @Html.ValidationMessage("OldPassword", "", new { Style = "color:red;" })

                                        </label>
                                    </div>

                                </section>
                                <section class="col-lg-12">
                                    <div class="col-lg-2">Password</div>
                                    <div class="col-lg-9">
                                        <label class="input">

                                            <i class="icon-append fa fa-lock"></i>
                                            @Html.PasswordFor(model => model.Password, new { placeholder = "Password", value = "" })
                                            <b class="tooltip tooltip-bottom-right">Password</b>
                                            @Html.ValidationMessageFor(model => model.Password, "", new { Style = "color:red;" })

                                        </label>
                                    </div>

                                </section>

                                <section class="col-lg-12">
                                    <div class="col-lg-2">Password Confirm</div>
                                    <div class="col-lg-9">
                                        <label class="input">
                                            <i class="icon-append fa fa-lock"></i>
                                            @Html.PasswordFor(model => model.PasswordConfirm, new { placeholder = "Confirm Password", value = "" })
                                            <b class="tooltip tooltip-bottom-right">Re-enter your password</b>
                                            @Html.ValidationMessageFor(model => model.PasswordConfirm, "", new { Style = "color:red;" })


                                        </label>
                                    </div>
                                </section>

                            </fieldset>


                            <footer>
                                <button type="submit" class="btn btn-primary">
                                    Update
                                </button>
                            </footer>

                            @*<div class="message">
                                    <i class="fa fa-check"></i>
                                    <p>
                                        Thank you for your registration!
                                    </p>
                                </div>*@
                        </form>

                    </div>

                </div>
            </div>
        </div>

    </div>

    <script type="text/javascript">

        $(document).ready(function () {
            $("#ddUserType").change(function () {
                debugger;
                var end = this.value;
                if (end == 1) {
                    //$("#ddManager").css("display", "none");
                    $("#ddManagers").hide();
                }
                else {
                    $("#ddManagers").show();
                    //$("#ddManager").css("display", "inline");
                }

            });
            $('input:not(.No-Validate), textarea:not(.No-Validate), select:not(.No-Validate)').on('focusout keyup', function () {
                if ($(this).val() == "") {
                    $(this).closest(".input").addClass("state-error")
                }
                else { $(this).closest(".input").removeClass("state-error") }
            });
        });

    </script>

