<script>
    $(document).ready(function () {
        var table = $('#myTable').DataTable({
            "dom": 'lrtip'
        } );

// #column3_search is a <input type="text"> element

        
        $('.customsearch').on('keyup', function () {
            debugger;
            table
                .columns(this.id)
                .search(this.value)
                .draw();
        });
    });
</script>
<h2>Properties</h2>
<div>
    <table id="myTable" class="table table-bordered">
        <colgroup>
            <col span="1" style="width: 15%;">
            <col span="1" style="width: 10%;">
            <col span="1" style="width: 15%;">
            <col span="1" style="width: 25%;">
            <col span="1" style="width: 10%;">
            <col span="1" style="width: 10%;">
            <col span="1" style="width: 15%;">
        </colgroup>
        <thead>
            <tr role="row">
                <th class="hasinput" rowspan="1" colspan="1">
                    <!--  account name-->
                    <input type="text" id="0" class="form-control customsearch" placeholder="Search">
                </th>
                <th class="hasinput" rowspan="1" colspan="1">
                    <!--  account name-->
                    <input type="text" id="1"  class="form-control customsearch" placeholder="Search">
                </th>
                <th class="hasinput" rowspan="1" colspan="1">
                    <!--  account name-->
                    <input type="text" id="2"  class="form-control customsearch" placeholder="Search">
                </th>
                <th class="hasinput" rowspan="1" colspan="1">
                    <!--  account name-->
                    <input type="text" id="3"  class="form-control customsearch" placeholder="Search">
                </th>
                <th class="hasinput" rowspan="1" colspan="1">
                    <!--  account name-->
                    <input type="text"  id="4"  class="form-control customsearch" placeholder="Search">
                </th>
                <th class="hasinput" rowspan="1" colspan="1">
                    <!--  account name-->
                    <input type="text" id="5"  class="form-control customsearch" placeholder="Search">
                </th>
                <th class="hasinput" rowspan="1" colspan="1">
                    <!--  account name-->
                    <input type="text"  id="6"  class="form-control customsearch" placeholder="Search">
                </th>

            </tr>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.PropertyName)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.City)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Area)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PropertyType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PropertyDetail)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.ContactNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SellingPrice)
                </th>

            </tr>
        </thead>
     
        <tbody>
            @foreach (var item in Model)
            {

                <tr>
                    <td>
                        @Html.DisplayFor(modelitem => item.PropertyName)
                    </td>

                    <td>
                        @Html.DisplayFor(modelitem => item.City)
                    </td>
                    <td>
                        @Html.DisplayFor(modelitem => item.Area)
                    </td>
                    <td>
                        @Html.DisplayFor(modelitem => item.PropertyType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelitem => item.PropertyDetail)
                    </td>

                    <td>
                        @Html.DisplayFor(modelitem => item.ContactNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelitem => item.SellingPrice)
                    </td>

                </tr>

            }
        </tbody>
</table>

</div>
