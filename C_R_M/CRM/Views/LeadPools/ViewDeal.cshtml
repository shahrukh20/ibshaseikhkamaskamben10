</form>

<script type="text/javascript">

    $("#jsGrid").jsGrid({
        width: "100%",
        height: "400px",
        filtering: false,
        editing: false,
        sorting: false,
        paging: true,
        autoload: true,
        pageSize: 5,
        pageButtonCount: 5,

        controller: {


            loadData: function (filter) {
                var id = $("#id").val();
                return $.ajax({
                    type: "POST",
                    data: JSON.stringify({ id: id }),
                    url: "../LeadPools/LoadLeadAttachments?id="+id,
                    dataType: "JSON"
                });
            }
        },
        fields: [
            { name: "id", title: "id", type: "text", visible: false, align: 'center' },
            { name: "Name", title: "Name", type: "text", width: 50, validate: "required", editing: false },
            { name: "Size", title: "Size", type: "text", width: 50, align: 'center', editing: false },
