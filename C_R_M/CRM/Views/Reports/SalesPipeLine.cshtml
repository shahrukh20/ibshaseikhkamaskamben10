@model CustomerManagementSystem.BLL.ViewModels.ReportsViewModel.UnAssignedReportsViewModel

<form action="/Reports/SalesPipeLine" method="post" id="FormSalesPipeLine">
    @Html.AntiForgeryToken()
    <div id="content">
        <h1>Sale Pipeline Report</h1>
        <div class="box box-danger">
            <div class="box-header with-border">
                <div class="form-horizontal">

                    <div class="form-group"></div>
                    <div class="form-group"></div>
                    <div class="form-group"></div>
                </div>
                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.fromdate, htmlAttributes: new { @class = "col-md-2" })
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.fromdate, new { htmlAttributes = new { @class = "form-control datepicker" } })
                            @Html.ValidationMessageFor(model => model.fromdate, "", new { @class = "text-danger" })
                        </div>

                        @Html.LabelFor(model => model.todate, htmlAttributes: new { @class = "col-md-2" })
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.todate, new { htmlAttributes = new { @class = "form-control datepicker" } })
                            @Html.ValidationMessageFor(model => model.todate, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="form-horizontal">
                        <div class="form-group">
                            <div class="col-md-offset-10 col-md-2">
                                <input type="button" value="Report" onclick="GenerateReport();" class="btn btn-primary btn-block btn-flat" />
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>
    </form>


    <script>
        $(function () {
            $(".datepicker").datepicker();

        });
        $('.datepicker').on('changeDate', function () {
            $(this).blur();
        }); 
        function GenerateReport() {
            if ($("#FormSalesPipeLine").valid()) {
                var str = $("#FormSalesPipeLine").serialize();
                $.ajax({
                    type: "POST",
                    url: "../Reports/SalesPipeLineLoad",
                    dataType: "JSON",
                    data: { str: str },
                    async: false,
                    success: function (data) {
                        var base_url = window.location.origin;
                        window.open(base_url + '/WebForms/ReportViwer.aspx', '_blank');
                    },
                    error: function (dar) { }
                })
            }
        }
    </script>
