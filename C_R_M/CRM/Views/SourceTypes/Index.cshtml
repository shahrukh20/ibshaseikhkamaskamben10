


<form id="leadForm" action="/SourceTypes/Index" method="post">
    <h1>Source Type Listing</h1>
    <div id="content">

        <div class="box box-danger">
            <div class="box-header with-border">

                <div id="content">
                    <div class="addbutton right">
                        <a href="@Url.Action("Create", "SourceTypes")"> <input type="button" class="btn btn-danger" value="Add Source Type" /></a>


                    </div>
                    <div class="form-horizontal">
                        <div id="jsGrid"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<script type="text/javascript">



    $(document).ready(function () {
     
        var originalFilterTemplate = jsGrid.fields.text.prototype.filterTemplate;
        jsGrid.fields.text.prototype.filterTemplate = function () {
            var grid = this._grid;
            var $result = originalFilterTemplate.call(this);
            $result.on("keyup", function (e) {
                // TODO: add proper condition and optionally throttling to avoid too much requests
                grid.search();
            });
            return $result;
        }

        $("#jsGrid").jsGrid({
            width: "100%",
            filtering: true,
            sorting: true,
            paging: true,
            autoload: true,
            async: false,

            pageSize: 10,
            pageButtonCount: 5,

            controller: {

                loadData: function (filter) {
                    var d = $.Deferred();
                    $.ajax({
                        type: "GET",
                        async: false,
                        url: "../SourceTypes/SourceTypeListingAjax",
                        dataType: "JSON"
                    }).done(function (result) {
                        for (var prop in filter) {

                            if (prop == "Is_Active" && filter['Is_Active'] != null) {
                                result = $.grep(result, function (item) {
                                    if (item[prop] == filter[prop]) {
                                        return item;
                                    }
                                });
                                break;
                            }
                            if (prop !="Is_Active") {
                                if (filter[prop].length > 0) {
                                    result = $.grep(result, function (item) {
                                        var regexp = new RegExp(filter[prop], 'gi');
                                        if (item[prop].match(regexp)) {
                                            return item;
                                        }
                                    });
                                    break;
                                }
                            }
                            

                        }
                        d.resolve(result);
                    });
                    return d.promise();
                }
            },
            fields: [
                { name: "Source_Type_Id", title: "id", type: "number", visible: false },
                { name: "Source_Name", title: "Source Name", type: "text", width: 150, validate: "required", editing: false },
                { name: "Is_Active", title: "Is Active", type: "checkbox", width: 50, validate: "required", editing: false },
                {
                    type: 'control',
                    align: 'center',
                    itemTemplate: function (_, item) {
                        return "<a onclick =\"ReditectToEditSection(" + item.Source_Type_Id + ");\" name='Edit'><span class='elementID'><span class='fa fa-pencil'></span></span></a>&nbsp&nbsp&nbsp<a href=\"/SourceTypes/Delete/" + item.Source_Type_Id + "\"><span class='fa fa-times'></span></span></a>";
                    }, width: 20
                }
            ]

        });

    });

</script>
<script>

    function ReditectToViewSection(Source_Type_Id) {
        var base_url = window.location.origin;
        window.location = base_url + "/SourceTypes/Details/" + Source_Type_Id;
    }

    function ReditectToEditSection(Source_Type_Id) {
        var base_url = window.location.origin;
        window.location = base_url + "/SourceTypes/Edit/" + Source_Type_Id;
    }
    function ReditectToDisableSection(Source_Type_Id) {
        var base_url = window.location.origin;
        window.location = base_url + "/SourceTypes/View/id=" + Source_Type_Id;
    }
</script>
