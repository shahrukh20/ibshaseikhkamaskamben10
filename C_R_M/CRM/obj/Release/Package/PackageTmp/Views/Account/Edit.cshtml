</head>

<body id="login">

    @*<header id="header">
            <!--<span id="logo"></span>-->

            <div id="logo-group">
                <span id="logo"> <img src="~/img/logo.png" alt="SmartAdmin"> </span>

                <!-- END AJAX-DROPDOWN -->
            </div>

            <span id="extr-page-header-space"> <span class="hidden-mobile hiddex-xs">Already registered?</span> <a href="@Url.Action("Login", "account")" class="btn btn-danger">Sign In</a> </span>

        </header>*@

    <div id="main" role="main">

        <!-- MAIN CONTENT -->
        <div id="content" class="container">

            <div class="row">

                <div class="col-lg-offset-2 col-lg-10 col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="well no-padding">






                        <form action="@Url.Action("Edit", "account")" method="Post" id="smart-form-register" class="smart-form client-form">
                            @Html.AntiForgeryToken()
                            <header>
                                Edit User
                                @{
                                    if (TempData["success"] != null)
                                    {
                                        <div style="color: #2fe42f;font-size: 12px;margin-top: 15px;">
                                            @Html.Encode(TempData["success"])
                                        </div>

                                    }
                                }
                            </header>
                            <input type="hidden" value="@ViewBag.UserID" name="UserID" />
                            <div class="">
                                @Html.ValidationSummary(true, "", new { @class = "text-danager alert", Style = "color:red;" })
                            </div>
                            <fieldset>
                                <section>
                                    <label class="input">
                                        <i class="icon-append fa fa-user"></i>
                                        <input disabled style="    background-color: lightgrey;" type="text" id="UserName" value="@ViewBag.UserName" required name="UserName" placeholder="User Name" />
                                        <b class="tooltip tooltip-bottom-right">UserName</b>
                                        @Html.ValidationMessage("UserName", "", new { Style = "color:red;" })

                                    </label>
                                </section>
                                <div class="row">

                                    <section class="col col-6">
                                        <label class="input">
                                            <i class="icon-append fa fa-user"></i>
                                            @Html.TextBoxFor(model => model.FirstName, new { placeholder = "First Name" })
                                            <b class="tooltip tooltip-bottom-right">First Name</b>
                                            @Html.ValidationMessageFor(model => model.FirstName, "", new { Style = "color:red;" })

                                        </label>
                                    </section>
                                    <section class="col col-6">
                                        <label class="input">
                                            <i class="icon-append fa fa-user"></i>
                                            @Html.TextBoxFor(model => model.LastName, new { placeholder = "Last Name" })
                                            <b class="tooltip tooltip-bottom-right">Last Name</b>
                                            @Html.ValidationMessageFor(model => model.LastName, "", new { Style = "color:red;" })

                                        </label>
                                    </section>
                                </div>

                                <section>
                                    <label class="input">
                                        <i class="icon-append fa fa-map-marker"></i>
                                        @Html.TextBoxFor(model => model.Address, new { placeholder = "Address" })
                                        <b class="tooltip tooltip-bottom-right">Complete Address</b>
                                        @Html.ValidationMessageFor(model => model.Address, "", new { Style = "color:red;" })

                                    </label>
                                </section>
                                <section>
                                    <label class="input">
                                        <i class="icon-append fa fa-map-marker"></i>
                                        <label class="select">
                                            @*@Html.DropDownListFor(M => M.CityId, new SelectList(Model.Cities, "Value", "Text"),"Select City")*@
                                            <b class="tooltip tooltip-bottom-right">City</b>
                                            @Html.ValidationMessageFor(model => model.CityId, "", new { Style = "color:red;" })
                                            <i></i>
                                            <b class="tooltip tooltip-bottom-right">City</b>
                                        </label>

                                    </label>
                                </section>


                            </fieldset>
                            <fieldset>

                                <section>
                                    <label class="input">
                                        <i class="icon-append fa fa-user"></i>
                                        @Html.TextBoxFor(model => model.PhoneNo, new { placeholder = "Phone Number", type = "number", @maxLength = "11", @minLength = "11" })
                                        <b class="tooltip tooltip-bottom-right">Phone Number</b>
                                        @Html.ValidationMessageFor(model => model.PhoneNo, "", new { Style = "color:red;" })
                                    </label>
                                </section>

                                <section>
                                    <label class="input">
                                        <i class="icon-append fa fa-envelope"></i>
                                        @Html.TextBoxFor(model => model.Email, new { placeholder = "Email Address", type = "email", @class = "No-Validate" })
                                        <b class="tooltip tooltip-bottom-right">Email Address</b>
                                        @Html.ValidationMessageFor(model => model.Email, "", new { Style = "color:red;" })

                                    </label>
                                </section>
                                @{ string display = "";}
                                @if (ViewBag.HasManager)
                                {
                                    display = "block";
                                }
                                else
                                {
                                    display = "none";
                                }
                                <section>
                                    <label class="input">
                                        <i class="icon-append fa fa-envelope"></i>
                                        @Html.DropDownList("ddUserType", (IEnumerable<SelectListItem>)ViewBag.UserType, new { @class = "No-Validate form-control select" })
                                    </label>
                                </section>
                                <section style="display:@display">
                                    <label class="input">
                                        <i class="icon-append fa fa-envelope"></i>
                                        @Html.DropDownList("ddManagers", (IEnumerable<SelectListItem>)ViewBag.Managers, new { @class = "No-Validate form-control select" })
                                    </label>
                                </section>
                                <section>
                                    <label class="input">
                                        <i class="icon-append fa fa-lock"></i>
                                        @Html.PasswordFor(model => model.Password, new { placeholder = "Password", value = "SS123456" })
                                        <b class="tooltip tooltip-bottom-right">Password</b>
                                        @Html.ValidationMessageFor(model => model.Password, "", new { Style = "color:red;" })

                                    </label>
                                </section>

                                <section>
                                    <label class="input">
                                        <i class="icon-append fa fa-lock"></i>
                                        @Html.PasswordFor(model => model.PasswordConfirm, new { placeholder = "Confirm Password", value = "SS123456" })
                                        <b class="tooltip tooltip-bottom-right">Re-enter your password</b>
                                        @Html.ValidationMessageFor(model => model.PasswordConfirm, "", new { Style = "color:red;" })


                                    </label>
                                </section>
                                <section>
                                    <label class="form-check">
                                        <i class="icon-append fa fa-user"></i>
                                        @{
                                            string bl = ViewBag.IsActive == true ? "checked" : "";
                                        }
                                        Is Active?<input type="checkbox" id="IsActive" value="true" @bl name="IsActive" />



                                    </label>
                                </section>
                            </fieldset>


                            <footer>
                                <button type="submit" class="btn btn-primary">
                                    Update
                                </button>
                            </footer>

                            @*<div class="message">
                                    <i class="fa fa-check"></i>
                                    <p>
                                        Thank you for your registration!
                                    </p>
                                </div>*@
                        </form>

                    </div>

                </div>
            </div>
        </div>

    </div>

    <script type="text/javascript">

        $(document).ready(function () {
            $("#ddUserType").change(function () {
                debugger;
                var end = this.value;
                if (end == 1) {
                    //$("#ddManager").css("display", "none");
                    $("#ddManagers").hide();
                }
                else {
                    $("#ddManagers").show();
                    //$("#ddManager").css("display", "inline");
                }

            });
            $('input:not(.No-Validate), textarea:not(.No-Validate), select:not(.No-Validate)').on('focusout keyup', function () {
                if ($(this).val() == "") {
                    $(this).closest(".input").addClass("state-error")
                }
                else { $(this).closest(".input").removeClass("state-error") }
            });
        });

    </script>

</body>
</html>